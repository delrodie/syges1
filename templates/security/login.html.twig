{% extends 'security_layout.html.twig' %}

{% block title %}{{parent()}} Connexion{% endblock %}

{% block body %}
    <div class="wrapper-page">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mt-0">SYGES</h3>
                <div class="p-3">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="form-group row">
                            <div class="col-12">
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus autocomplete="off" placeholder="Nom utilisateur">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-12">
                                <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">
                            </div>
                        </div>


                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <div class="form-group text-center row m-t-20">
                            <div class="col-12">
                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Se connecter</button>
                            </div>
                        </div>

                        <div class="form-group m-t-10 mb-0 row">
                            <div class="col-sm-7 m-t-20">
                                <a href="#" class="text-muted"><i class="mdi mdi-lock"></i> <small>Mot de passe oubli√© ?</small></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
