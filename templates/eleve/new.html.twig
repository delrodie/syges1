{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion des élèves{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="card">
            <div class="text-right">

            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-6"><h4 class="card-title">Formulaire d'enregistrement</h4></div>
                    <div class="col-6 text-right">
                        <a href="{{ path('eleve_index') }}" class="btn btn-social-icon-text btn-facebook"><i class="fa fa-list"></i>Liste des élèves</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}" style="font-size: 1.3rem;">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ include('eleve/_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
